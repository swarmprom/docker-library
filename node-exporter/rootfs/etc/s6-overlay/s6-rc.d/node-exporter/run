#!/usr/bin/env bash
exec 2>&1
exec node_exporter \
		--path.rootfs=/host_mnt/ \
		--path.sysfs=/host_mnt/sys \
		--path.procfs=/host_mnt/proc \
		--path.udev.data=/host_mnt/run/udev/data \
		--collector.systemd \
		--collector.processes \
		--collector.textfile.directory=/etc/node-exporter \
		--collector.filesystem.mount-points-exclude=^/\(sys\|proc\|dev\|host\|etc\)\(\$\|/\) \
		--no-collector.ipvs
